    function playPause() {
        if ($("#video1").paused) {
            $("#video1").play();
        }
        else
            $("#video1").pause();
    }


    function LoadAllDataForHomePage() {

        $.ajax({
            url: '@Url.Action("LoadAllDataForHomePage", "Home")',
            contentType: "application/json; charset=utf-8",
            type: 'POST',
            dataType: "json",
            data: {},
            success: function (data) {

                //
                $("#cboCategory").html("");


                CategoryList = data.CategoryList;
                var gridTableComboBoxHtml = "<option value=\"" + '@((int)Var.DefaultValueInComboBox)' + "\" selected>" + '@Resource.All' + "</option>";
                var gridTablePanelLeftHtml = "";
                var gridTablePanelTopHtml = "";
                $.each(CategoryList, function (index, item) {
                    var CategoryName = "";
                    if (Langguage === "vi-VN") {
                        CategoryName = item.CategoryName;
                    }
                    else {
                        CategoryName = item.CategoryName2;
                    }

                    gridTableComboBoxHtml += "<option value=\"" + item.CategoryID + "\">" + CategoryName + "</option>";

                    if (index == '0') {
                        gridTablePanelLeftHtml += "<li  class=\"active\"> <a data-toggle=\"tab\" href=\"#menu" + index + "\"> <i class=\"fa fa-chevron-right\" style=\"padding-right: 10px;\"> </i>" + CategoryName + "</a></li>";
                    }
                    else {
                        gridTablePanelLeftHtml += "<li> <a data-toggle=\"tab\" href=\"#menu" + index + "\"> <i class=\"fa fa-chevron-right\" style=\"padding-right: 10px;\"> </i>" + CategoryName + "</a></li>";
                    }

                    if (index == '0') {
                        gridTablePanelTopHtml += "<li class=\"active\"> <a data-toggle=\"tab\" href=\"#menu" + index + "\">" + CategoryName + "</a></li>";
                    }
                    else {
                        gridTablePanelTopHtml += "<li> <a data-toggle=\"tab\" href=\"#menu" + index + "\">" + CategoryName + "</a></li>";
                    }

                });

                $("#cboCategory").html(gridTableComboBoxHtml);
                $("#lstCategoryPanelLeft").html("");
                $("#lstCategoryPanelLeft").html(gridTablePanelLeftHtml);

                $("#lstCategoryPanelTop").html("");
                $("#lstCategoryPanelTop").html(gridTablePanelTopHtml);

                //
                $("#lstItemHotPanelLeft").html("");
                var gridItemListHotHtml = "";
                $.each(data.ItemListHot, function (index, item) {
                    var ItemName = "";
                    if (Langguage === "vi-VN") {
                        ItemName = item.ItemName;
                    }
                    else {
                        ItemName = item.ItemName2;
                    }
                    gridItemListHotHtml += "<li> <a href=\"javascript:ShowItemDetail('" + item.ItemID + "')\">";
                    gridItemListHotHtml += "<img src=\"" + '@Url.Content(Var.UrlUploadItemImage)' + item.ItemImageURL + "\" class=\"img-responsive\"> ";
                    gridItemListHotHtml += "<p class=\"tittle-small\">" + ItemName + "</p></a></li>";
                });
                $("#lstItemHotPanelLeft").html(gridItemListHotHtml);

                //
                $("#lstNewsPanelLeft").html("");
                var gridNewsPanelLeftHtml = "";
                $.each(data.NewsList, function (index, item) {
                    var Title = "";
                    if (Langguage === "vi-VN") {
                        Title = item.Title;
                    }
                    else {
                        Title = item.Title2;
                    }
                    gridNewsPanelLeftHtml += "<li style=\"height: 85px;\"> <a href=\"javascript:ShowNewsDetail('" + item.NewsID + "')\">";
                    gridNewsPanelLeftHtml += "<img src=\"" + '@Url.Content(Var.UrlUploadCompanyNewsImage)' + item.ItemImageURL + "\" class=\"img-responsive\" style=\"height: 47px; width: 70px;\"> ";
                    gridNewsPanelLeftHtml += "<p class=\"tittle-small\">" + Title + "</p>";
                    gridNewsPanelLeftHtml += "<span class=\"link-deatail\"  onclick=\"ShowNewsDetail('" + item.NewsID + "'\">" + '@Resource.ViewDetails' + "</span></a></li>";
                });

                $("#lstNewsPanelLeft").html(gridNewsPanelLeftHtml);

                //
                $("#lstAllItem").html("");
                var gridAllItemHtml = "";
                var isFist = false;
                $.each(data.ItemInCategory, function (index, item) {

                    if (index == '0') {

                        gridAllItemHtml += "<div id=\"menu" + index + "\" class=\"tab-pane fade in active\">";

                    }
                    else {
                        gridAllItemHtml += "<div id=\"menu" + index + "\" class=\"tab-pane fade \">";

                    }

                    var numberRow = 1;
                    gridAllItemHtml += "<div class=\"col-md-12 col-lg-12 padd0\" id=\"row" + index + numberRow + "\">";
                    var indexTotal = 0;
                    var numberRow = 1;
                    $.each(item, function (ix, im) {
                        indexTotal++;
                        var ItemName = "";
                        if (Langguage === "vi-VN") {
                            ItemName = im.ItemName;
                        }
                        else {
                            ItemName = im.ItemName2;
                        }
                        gridAllItemHtml += "<div class=\"col-md-4 col-lg-4 mt15\">";
                        gridAllItemHtml += "<div class=\"box-show-product col-md-12 col-lg-12 padd0\">";
                        gridAllItemHtml += "<div class=\"box-img col-md-12 col-lg-12\">";
                        gridAllItemHtml += "<a href=\"javascript:ShowItemDetail('" + im.ItemID + "')\">";
                        gridAllItemHtml += "<img src=\"" + '@Url.Content(Var.UrlUploadItemImage)' + im.ItemImageURL + "\" class=\"img-responsive\" style=\"height: 105px; width: 190px;\"> ";
                        gridAllItemHtml += "</a>";
                        gridAllItemHtml += "</div>";
                        gridAllItemHtml += "<div class=\"col-md-12 col-lg-12 padd0\">";
                        gridAllItemHtml += "<p class=\"box-info-danhgia\">";
                        gridAllItemHtml += ItemName;
                        gridAllItemHtml += "</p>";
                        gridAllItemHtml += "<p class=\"box-star\">";
                        gridAllItemHtml += "<i class=\"fa fa-star-o\"></i><i class=\"fa fa-star-o\"></i><i class=\"fa fa-star-o\"></i><i class=\"fa fa-star-o\"></i><i class=\"fa fa-star-o\"></i>";
                        gridAllItemHtml += "</p>";
                        gridAllItemHtml += "</div>";
                        gridAllItemHtml += "<div class=\"col-md-12 col-lg-12\">";
                        gridAllItemHtml += "<p class=\"box-datetime\">";
                        gridAllItemHtml += "<i class=\"fa fa-clock-o\"></i>";
                        gridAllItemHtml += "<span class=\"small day-post\">239 Days</span>";
                        gridAllItemHtml += "<span class=\"small time-post\">13:13:11</span>";
                        gridAllItemHtml += "</p>";
                        gridAllItemHtml += "</div>";
                        gridAllItemHtml += "</div>";
                        gridAllItemHtml += "</div>";
                        gridAllItemHtml += "";

                        if (indexTotal % 3 == 0) {
                            numberRow++;
                            gridAllItemHtml += "</div><div class=\"col-md-12 col-lg-12 padd0\" id=\"row" + index + numberRow + "\">";
                        }
                    });

                    gridAllItemHtml += "</div></div>"
                });
                $("#lstAllItem").html(gridAllItemHtml);
            }
        });

    };

    function ShowItemDetail(e) {

        var url = '@Url.Action("ProductDetails", "Home", new { id = "__id__" })';
        window.location.href = url.replace('__id__', e);
    }

    function ShowNewsDetail(e) {
        var url = '@Url.Action("NewsDetail", "Home", new { id = "__id__" })';
        window.location.href = url.replace('__id__', e);
    }
    function SearchDetail(e) {
        var url = '@Url.Action("Search", "Home", new { key = "__key__" })';
        window.location.href = url.replace('__key__', e);
    }

    function scrollup() {
          $("html, body").animate({
            scrollTop: 0
        }, 600);
        return false;
    }
    
