                        </div>
                    }

                    @if (Model.ItemImageURL3 != "")
                    {
                        <div class="col-md-3 col-lg-3 padd0">
                            <a data-slide-index="2" href=""><img src="@Url.Content(Var.UrlUploadItemImage + Model.ItemImageURL3)" class="img-responsive" style=" width: 70px;" /></a>
                        </div>
                    }
                    else
                    {
