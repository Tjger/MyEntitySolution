@using EntitySolution.Domain.Common;
@model EntitySolution.EntityDB.Item
@{
    ViewBag.Title = "ProductDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<EntitySolution.EntityDB.Item> ListProductAndRelative = new List<EntitySolution.EntityDB.Item>();
    if (ViewBag.ListProductAndRelative != null)
    {
        ListProductAndRelative = (List<EntitySolution.EntityDB.Item>)ViewBag.ListProductAndRelative;
    }
}

<div class="col-md-12 col-lg-12 padd0">
    <div class="box-title-detail col-md-12 col-lg-12">
        <p class="title-subpost">
            @if (Session["Culture"].ToString().Contains("vi-VN"))
            {
                @Model.ItemName
            }
            else
            {
                @Model.ItemName2
            }

        </p>
    </div>
