                            <a data-slide-index="3" href=""><img src="@Url.Content(Var.UrlUploadItemImage + Model.ItemImageURL4)" class="img-responsive" style=" width: 70px;" /></a>
                        </div>
                    }
                    else
                    {
                        <div class="col-md-3 col-lg-3 padd0">
                            <a data-slide-index="3" href=""><img src="@Url.Content("~/Content/FontEnd/images/no_image.png")" class="img-responsive" style=" width: 70px;" /></a>
                        </div>
                    }
                   
                </div>

            </div>
        </div>
        <div class="col-md-7 col-lg-7">
            <div class="box-sum-info">
                <div class="pro_rightface left">
                    <div class="pro_intro">
                        <i class="fa fa-plus" style="color:#ff6a00;"></i>  <strong>Product</strong>:
                        @if (Session["Culture"].ToString().Contains("vi-VN"))
                        {
                            @Model.ItemName
                        }
                        else
                        {
                            @Model.ItemName2
                        }
                        <br>
                        <i class="fa fa-plus" style="color:#ff6a00;"></i>  <strong>Condition</strong>:
                        @if (Session["Culture"].ToString().Contains("vi-VN"))
                        {
                            @Model.ItemCondition
                        }
                        else
                        {
                            @Model.ItemCondition2
                        }
                        <br>
                        <i class="fa fa-plus" style="color:#ff6a00;"></i>  <strong>Size</strong>:
                        @if (Session["Culture"].ToString().Contains("vi-VN"))
