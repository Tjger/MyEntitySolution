                    {
                       <li><img src="@Url.Content(Var.UrlUploadItemImage + Model.ItemImageURL)" class="img-responsive" style=" width: 320px;" /></li>
                    }
                    else
                    {
                        <li><img src="@Url.Content("~/Content/FontEnd/images/no_image.png")" class="img-responsive" style=" width: 320px;" /></li>
                         
                    }

                    @if (Model.ItemImageURL2 != "")
                    {
                        <li><img src="@Url.Content(Var.UrlUploadItemImage + Model.ItemImageURL2)" class="img-responsive" style=" width: 320px;" /></li>
