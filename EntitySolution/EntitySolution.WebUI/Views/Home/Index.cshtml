@{
    ViewBag.Title = "Home Page";
}
<script type="text/javascript" src="~/Scripts/jquery-1.10.2.js"></script>
<script>
    $(document).ready(function () {
        LoadAllCategory();
    });

    function LoadAllCategory() {
      
        $.ajax({
            url: '@Url.Action("GetAllCategory", "Home")',
            contentType: "application/json; charset=utf-8",
            type: 'GET',
            dataType: "json",
            data: {},
            success: function (data) {               
                var items = '<table><tr><th>CategoryID</th><th>CategoryName</th></tr>';
                $.each(data, function (i, cate) {                   
                    items += "<tr><td>" + cate.CategoryID + "</td><td>" + cate.CategoryName + "</td></tr>";
                });
                items += "</table>";

                $('#divShow').html(items);
            
            }
        });

    }
</script>
