@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div>
    <section class="main">
        <form class="form-2">
            <h1><span class="log-in">Đăng nhập hệ thống</span> </h1>
            <p class="float">
                <label for="login"><i class="icon-user"></i>Tên đăng nhập</label>
                <input type="text" name="login" placeholder="Tên tài khoản">
            </p>
            <p class="float">
                <label for="password"><i class="icon-lock"></i>Mật khẩu</label>
                <input type="password" name="password" placeholder="Mật khẩu" class="showpassword">
            </p>
            <p class="clearfix">
                <input type="submit" name="submit" value="Đăng nhập" id="btnLogin" style="width: 98% !important; margin-top: 20px;">
            </p>
        </form>
     

    </section>
</div>